<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>first_screen</servlet-name>
        <jsp-file>/first_screen.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>first_screen</servlet-name>
        <url-pattern>/first</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>second_screen</servlet-name>
        <jsp-file>/second_screen.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>second_screen</servlet-name>
        <url-pattern>/second</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>third_screen</servlet-name>
        <jsp-file>/third_screen.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>third_screen</servlet-name>
        <url-pattern>/third</url-pattern>
    </servlet-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>letscodeTags</taglib-uri>
            <taglib-location>WEB-INF/letcode-tags.tld</taglib-location>
        </taglib>
    </jsp-config>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>